.side_bar
  .left-contents
    .left-contents__nav
      .left-contents__nav__box
        .left-contents__nav__box__username
          %p
            =current_user.name
        %ul.left-contents__nav__box__menu
          %li.left-contents__nav__box__menu__newgroup
            =link_to new_group_path, method: :get, class:"left-contents__nav__box__menu__newgroup__btn" do
              =fa_icon "edit" ,class: "left-contents__nav__box__menu__newgroup__btn__icon" 
          %li.left-contents__nav__box__menu__edit-user
            =link_to edit_user_path(current_user) ,class:"left-contents__nav__box__menu__newgroup__btn" do
              =fa_icon "cog" ,class:"left-contents__nav__box__menu__newgroup__btn__icon"
    .left-contents__groups
      %div.left-contents__groups__list
        - current_user.groups.each do |group|
          %div.left-contents__groups__list__group<>
            =link_to group_messages_path(group),class:"left-contents__groups__list__group__block" do
              %p.left-contents__groups__list__group__block__name<>
                = group.name
              %p.left-contents__groups__list__group__block__text<>
                = group.show_last_message